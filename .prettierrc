{
  "semi": false,
  "singleQuote": true,
  "trailingComma": "all",
  "tabWidth": 2,
  "singleAttributePerLine": true,
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "^react(.*)$",
    "^(app)/(.*)$",
    "^(routes)/(.*)$",
    "^(modules)/(.*)$",
    "^shared/ui(.*)$",
    "^shared/lib(.*)$",
    "^shared/model(.*)$",
    "^shared/config(.*)$",
    "^shared/assets(.*)$",
    "^shared/types(.*)$",
    "^../",
    "^./",
    ".(s)*css$"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "endOfLine": "auto"
}
